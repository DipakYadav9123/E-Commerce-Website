{
  "name": "ayurvedaherbs-ecommerce",
  "version": "1.0.0",
  "description": "Modern Ayurvedic E-Commerce Website with PWA, SEO, and Performance Optimizations",
  "private": true,
  "homepage": "https://dipakyadav9123.github.io/E-Commerce-Website",
  "author": "AyurvedaHerbs Team",
  "license": "MIT",
  "keywords": [
    "ayurveda",
    "herbal",
    "ecommerce",
    "react",
    "pwa",
    "seo",
    "performance",
    "netlify",
    "vercel"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ayurvedaherbs-ecommerce.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/ayurvedaherbs-ecommerce/issues"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "netlify deploy --prod --dir=build",
    "deploy:preview": "netlify deploy --dir=build",
    "build:analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "test:performance": "npm run build && npm run lighthouse",
    "prebuild": "echo 'Building for production...'",
    "postbuild": "echo 'Build completed successfully!' && echo 'Ready for deployment to Netlify/Vercel'",
    "clean": "rm -rf build node_modules package-lock.json && npm install",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "security:check": "npm audit",
    "security:fix": "npm audit fix",
    "update:deps": "npm update",
    "update:deps:major": "npx npm-check-updates -u",
    "install:clean": "rm -rf node_modules package-lock.json && npm install",
    "cache:clear": "npm cache clean --force",
    "dev": "npm start",
    "prod": "npm run build && npm run deploy",
    "vercel": "vercel --prod",
    "vercel:preview": "vercel"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "aos": "^2.3.4",
    "framer-motion": "^10.16.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "react-scripts": "5.0.1",
    "react-slick": "^0.29.0",
    "react-toastify": "^9.1.3",
    "slick-carousel": "^1.8.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/plugin-transform-private-property-in-object": "^7.27.1",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5",
    "webpack-bundle-analyzer": "^4.8.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/yourusername"
  }
}
